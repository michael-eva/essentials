[phases.setup]
cmds = [
  "cp package-railway.json package.json",
  "mkdir -p packages/database/dist packages/trpc/dist packages/types/dist"
]

[phases.install]
cmds = ["npm install"]

[phases.build]
cmds = [
  "cp -r ../../packages/database/src/* packages/database/dist/ || true",
  "cp -r ../../packages/trpc/src/* packages/trpc/dist/ || true",
  "cp -r ../../packages/types/src/* packages/types/dist/ || true",
  "npm run build"
]

[start]
cmd = "npm start"
