{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@types/*": ["packages/types/*"],
      "@utils/*": ["packages/utils/*"],
      "@essentials/trpc": ["packages/trpc/src/index.ts"],
      "@essentials/trpc/*": ["packages/trpc/src/*"],
      "@essentials/database": ["packages/database/src/index.ts"],
      "@essentials/database/*": ["packages/database/src/*"],
      "@essentials/types": ["packages/types/src/index.ts"],
      "@essentials/types/*": ["packages/types/src/*"]
    }
  }
} 