{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@essentials/database": ["packages/database/src/index.ts"],
      "@essentials/trpc": ["packages/trpc/src/index.ts"],
      "@essentials/types": ["packages/types/src/index.ts"],
      "@essentials/ui/*": ["packages/ui/src/*"],
      "@essentials/utils/*": ["packages/utils/src/*"]
    }
  },
  "exclude": ["node_modules"]
} 